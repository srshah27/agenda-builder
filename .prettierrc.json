{
  "arrowParens": "avoid",
  "singleQuote": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "semi": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "overrides": [
    { "files": "*.json", "options": { "parser": "json" } },
    { "files": "*.md", "options": { "parser": "markdown" } },
    { "files": "*.js", "options": { "parser": "babel" } },
    { "files": "*.ts", "options": { "parser": "typescript" } },
    { "files": "*.tsx", "options": { "parser": "typescript" } },
    { "files": "*.jsx", "options": { "parser": "babel" } },
    { "files": "*.css", "options": { "parser": "css" } },
    { "files": "*.html", "options": { "parser": "html" } }
  ]
}
